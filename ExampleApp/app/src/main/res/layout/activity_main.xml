<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.andrewpratt.exampleapp.MainActivity">

    <Button
        android:text="retrieve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/retrieveData"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/getData"
        android:layout_alignStart="@+id/getData"
        android:layout_alignRight="@+id/sendData"
        android:layout_alignEnd="@+id/sendData" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textUri|number"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:id="@+id/serverIp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="192.168.0.7:3000"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="received data"
        android:id="@+id/receivedData"
        android:textAlignment="center"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/serverIp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="get data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/getData"
        android:layout_above="@+id/sendData"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/sendData"
        android:layout_alignEnd="@+id/sendData" />

    <Button
        android:text="retrieve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/retrieveToken"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/sendToken"
        android:layout_alignEnd="@+id/sendToken"
        android:layout_alignLeft="@+id/sendToken"
        android:layout_alignStart="@+id/sendToken" />

    <Button
        android:text="send plain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sendPlain"
        android:layout_above="@+id/getToken"
        android:layout_toRightOf="@+id/getToken"
        android:layout_toEndOf="@+id/getToken" />

    <Button
        android:text="get plain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/getPlain"
        android:layout_above="@+id/getToken"
        android:layout_toLeftOf="@+id/getToken"
        android:layout_toStartOf="@+id/getToken" />

    <Button
        android:text="sign action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signAction"
        android:layout_alignBaseline="@+id/getData"
        android:layout_alignBottom="@+id/getData"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/sendAction"
        android:layout_alignStart="@+id/sendAction" />

    <Button
        android:text="verify action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/verifyAction"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/sendToken"
        android:layout_alignLeft="@+id/signAction"
        android:layout_alignStart="@+id/signAction" />

    <Button
        android:text="send action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sendAction"
        android:layout_above="@+id/verifyAction"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="send token"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sendToken"
        android:layout_alignBaseline="@+id/sendAction"
        android:layout_alignBottom="@+id/sendAction"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="send data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sendData"
        android:layout_alignBaseline="@+id/sendToken"
        android:layout_alignBottom="@+id/sendToken"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="get token"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/getToken"
        android:layout_above="@+id/sendToken"
        android:layout_alignLeft="@+id/sendToken"
        android:layout_alignStart="@+id/sendToken" />

</RelativeLayout>
